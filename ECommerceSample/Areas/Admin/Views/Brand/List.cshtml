@using ECommerce.Entity;
@model IEnumerable<Brand>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>
<table class="table table-condensed table-hover table-striped" border="1">
    <tr class="active">
        <th>@Html.DisplayNameFor(t => t.BrandName)</th>
        <th>@Html.DisplayNameFor(t => t.Description)</th>
        <th>@Html.DisplayNameFor(t => t.Photo)</th>
        <th>Edit & Delete</th>
    </tr>
    @foreach (Brand item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(t => item.BrandName)</td>
        <td>@Html.DisplayFor(t => item.Description)</td>
        <td><center><img src="~/Upload/@item.Photo" class="img-circle" style="width:75px" height="75" /></center></td>
        <td>
            <a href="~/Admin/Brand/Edit/@item.BrandId" class="btn btn-success">Edit</a>
            @Html.ActionLink("Delete", "Delete", new { @id = item.BrandId }, new { @class = "btn btn-primary" })
        </td>
    </tr>
    }
</table>

                                                                               