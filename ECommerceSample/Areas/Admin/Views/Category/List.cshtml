@using ECommerce.Entity
@model IEnumerable<Category>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
<link href = "~/Content/startbootstrap-sb-admin-gh-pages/css/bootstrap.min.css" rel = "stylesheet" />
}
<h2>Category List</h2>
<div>
    <p>@ViewBag.Mesaj</p>
</div>
<table class="table table-condensed table-hover table-striped">
    <tr class="active">
        <td>@Html.DisplayNameFor(t => t.CategoryName)</td>
        <td>@Html.DisplayNameFor(t => t.Description)</td>
        <td>Edit & Delete</td>
    </tr>
    @foreach (Category item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>
                <a href="~/Admin/Category/Edit/@item.CategoryId" class="btn btn-success">Edit</a>
                @Html.ActionLink("Delete", "Delete", new { @id = item.CategoryId}, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>

