@model IEnumerable<ECommerce.Entity.Member>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New","AddMember")
</p>

<div>
    @ViewBag.Mesaj
</div>
<table class="table table-striped table-hover table-condensed" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRole);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address);
        </th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(m => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(m => item.Email)
        </td>
        <td>
            @Html.DisplayFor(m => item.Password)
        </td>
        <td>
            @Html.DisplayFor(m => item.UserRole.RoleName)
        </td>
        <td>
            @Html.DisplayFor(m => item.Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) | @Html.ActionLink("Delete","Delete", new { id=item.UserId})
        </td>
    </tr>
    }
</table>

