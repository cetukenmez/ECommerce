@model IEnumerable<ECommerce.Entity.Product>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New","AddProduct")
</p>

<table class="table table-striped table-hover table-condensed">
    @ViewBag.Mesaj
    <tr>
        <th> @Html.DisplayNameFor(model => model.ProductName)</th>
    
        <th> @Html.DisplayNameFor(model => model.Price)</th>
    
        <th> @Html.DisplayNameFor(model => model.Category.CategoryName)</th>
    
        <th> @Html.DisplayNameFor(model => model.Brand.BrandName)</th>
    
        <th> @Html.DisplayNameFor(model => model.Photo)</th>
        <th>Edit | Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=> item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> item.Brand.BrandName)
            </td>
            <td>
                <img src="~/Upload/@item.Photo" width="100" height="100"class="img-circle"  />
            </td>
            <td>
                @Html.ActionLink("Edit","Edit", new { id = item.ProductId}, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Delete","Delete",new { id = item.ProductId}, new {@class = "btn btn-danger" } )
            </td>
        </tr>
    }
</table>