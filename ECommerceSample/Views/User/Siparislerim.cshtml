
@model IEnumerable<ECommerce.Entity.Order>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared2/_UserLayout.cshtml";
}

<h2>Siparislerim</h2>
<div>
    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.OrderId);
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 align-items-center" style="margin:5px;max-height:250px;background-color:aliceblue;border-radius:15px 15px 15px 15px;border:solid white ">
            <div class="col-md-9 col-lg-9">
                <table class="table table-hover table-condensed table-striped">
                    <tr>
                        <td><strong>Adı Soyadı : </strong></td>
                        <td><b style="font-family:'Times New Roman', Times, serif">@Html.DisplayFor(m => item.Member.FirstName) @Html.DisplayFor(t => item.Member.LastName)</b></td>
                    </tr>  
                    <tr>
                        <td><strong>Ödeme Durumu : </strong></td>
                        <td><i style="font-family:'Comic Sans MS'">@Html.DisplayFor(m => item.IsPay.Value)</i></td>
                    </tr>
                    <tr>
                        <td><strong>Ücret : </strong></td>
                        <td><i style="font-family:'Comic Sans MS'">@String.Format("{0:C}", item.TotalPrice)</i></td>
                    </tr>
                </table>
            </div>
            <div class="col-md-3 col-lg-3 text-center" style="margin-top:15px">
                <label><i class="fa fa-fw fa-calendar"></i>İlan Tarihi  </label><br />
                @Html.DisplayFor(m => item.OrderDate)<br /><br />
            </div>
        </div>
    }
</div>